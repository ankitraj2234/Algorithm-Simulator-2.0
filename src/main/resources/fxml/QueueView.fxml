<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.simulator.QueueController" styleClass="algorithm-page, main-layout">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="module-header">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>

            <Button onAction="#goBack" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="16" />
                </graphic>
            </Button>

            <FontIcon iconLiteral="fas-stream" iconSize="24" styleClass="header-icon" />
            <Label styleClass="module-title" text="Queue Operations - FIFO Data Structure" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- Codes Button -->
            <Button fx:id="codesButton" onAction="#openCodesPopup" styleClass="nav-button">
                <graphic>
                    <FontIcon iconLiteral="fas-code" iconSize="16" />
                </graphic>
                <tooltip>
                    <Tooltip text="View Queue Code Examples" />
                </tooltip>
            </Button>

            <Label styleClass="version-label" text="Interactive Mode" />
        </HBox>
    </top>

    <center>
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Control Panel -->
            <VBox spacing="15.0" styleClass="control-panel" prefWidth="320">
                <Label styleClass="panel-title" text="ðŸŽ›ï¸ Queue Operations" />

                <!-- Input Section -->
                <VBox spacing="8.0">
                    <Label text="Enter Value:" />
                    <TextField fx:id="inputField" promptText="Enter number (1-999)" styleClass="input-field" />
                </VBox>

                <!-- Operation Buttons -->
                <VBox spacing="8.0">
                    <Label text="Operations:" />
                    <HBox spacing="8.0">
                        <Button fx:id="enqueueButton" onAction="#enqueueElement" styleClass="control-button,play-button" text="Enqueue" prefWidth="85" />
                        <Button fx:id="dequeueButton" onAction="#dequeueElement" styleClass="control-button,reset-button" text="Dequeue" prefWidth="85" />
                        <Button fx:id="clearButton" onAction="#clearQueue" styleClass="control-button,step-button" text="Clear" prefWidth="75" />
                    </HBox>
                    <HBox spacing="8.0">
                        <Button fx:id="frontButton" onAction="#showFront" styleClass="control-button,pause-button" text="Front" prefWidth="85" />
                        <Button fx:id="rearButton" onAction="#showRear" styleClass="control-button,pause-button" text="Rear" prefWidth="85" />
                    </HBox>
                </VBox>

                <!-- Queue Information -->
                <VBox spacing="8.0">
                    <Label text="Queue Status:" />
                    <VBox spacing="5.0">
                        <Label fx:id="statusLabel" text="Queue is Empty" styleClass="status-text" />
                        <Label fx:id="sizeLabel" text="Size: 0" styleClass="stat-label" />
                        <Label fx:id="frontLabel" text="Front: null" styleClass="stat-label" />
                        <Label fx:id="rearLabel" text="Rear: null" styleClass="stat-label" />
                        <Label fx:id="capacityLabel" text="Capacity: 0/15" styleClass="stat-label" />
                    </VBox>
                    <ProgressBar fx:id="capacityBar" prefWidth="300" />
                </VBox>

                <!-- Operation History -->
                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <Label text="Operation History:" />
                    <TextArea fx:id="operationHistory" prefHeight="150" styleClass="info-area" />
                </VBox>
            </VBox>

            <!-- Visualization Area -->
            <VBox spacing="15.0" HBox.hgrow="ALWAYS" styleClass="visualization-pane">
                <Label styleClass="viz-title" text="ðŸ“¤ Queue Visualization" />

                <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                    <Label text="FIFO (First In, First Out)" styleClass="info-text" />

                    <!-- Queue Indicators -->
                    <HBox alignment="CENTER" spacing="300">
                        <Label text="â† FRONT (Dequeue)" style="-fx-font-size: 14px; -fx-text-fill: #ef4444; -fx-font-weight: bold;" />
                        <Label text="REAR (Enqueue) â†’" style="-fx-font-size: 14px; -fx-text-fill: #10b981; -fx-font-weight: bold;" />
                    </HBox>

                    <!-- Queue Container (Horizontal) -->
                    <ScrollPane fitToHeight="true" prefHeight="120" prefWidth="600">
                        <HBox fx:id="queueContainer" alignment="CENTER_LEFT" spacing="8" styleClass="queue-visualization">
                            <padding>
                                <Insets left="20" right="20" />
                            </padding>
                        </HBox>
                    </ScrollPane>

                    <!-- Direction Arrow -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="â—„â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â–º" style="-fx-font-size: 16px; -fx-text-fill: #6b7280;" />
                    </HBox>
                    <Label text="Elements flow from RIGHT to LEFT" styleClass="info-text" />
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
